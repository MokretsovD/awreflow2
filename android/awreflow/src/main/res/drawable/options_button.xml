<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- accent top line - will be mostly overlayed by the next shape -->

  <item android:right="2dp" android:bottom="2dp" android:left="2dp" android:top="2dp">
    <shape android:shape="rectangle">
      <solid android:color="#ff606060"/>
    </shape>
  </item>

  <!-- main background, offset down a pixel to let the accent show through -->

  <item android:right="2dp" android:bottom="2dp" android:left="2dp" android:top="3dp">
    <shape android:shape="rectangle">
      <solid android:color="#ff404040"/>
    </shape>
  </item>

</layer-list>

